{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.0.0",
  "description": "__MSG_appDescription__",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "alarms",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "__MSG_appName__"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["data.json", "*.json", "progress.html", "progress.js"],
      "matches": ["<all_urls>"]
    }
  ]
} 