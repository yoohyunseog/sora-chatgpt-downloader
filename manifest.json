{
  "manifest_version": 3,
  "name": "__MSG_appName__",
  "version": "1.2.0",
  "description": "__MSG_appDescription__",
  "default_locale": "en",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://sora.chatgpt.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Sora ChatGPT Auto Save"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://sora.chatgpt.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["data.json"],
      "matches": ["https://sora.chatgpt.com/*"]
    }
  ]
} 